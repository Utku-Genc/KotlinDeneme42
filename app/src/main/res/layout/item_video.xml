<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp"
    android:id="@+id/list_border"
    android:background="@drawable/radius"
    android:layout_margin="10dp"

    >

    <ImageView
        android:layout_width="84dp"
        android:layout_height="match_parent"
        android:padding="1dp"

        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:id="@+id/thumbnail_image_view"
        android:background="@drawable/radius"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/thumbnail_image_view"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Dizi-Film İsim"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/dizi_isim_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Sezon"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:id="@+id/dizi_sezon_view"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Bölüm"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/dizi_bolum_view"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Dizi-Film açıklaması. Burada kısaca dizinin bu bölümünün özeti veya filmin özeti gözükür."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@+id/dizi_acıklama_view"/>
    </LinearLayout>

</RelativeLayout>